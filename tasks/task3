import pandas as pd

# Parameters: None
# Purpose: 
#   Helper function to create an imaginary entry for the dataframe
def createEntry():
    name = input("Name: ")
    phone = int(input("Phone Number: "))
    address = input("Address: ")
    paid = input("Paid(Y/N): ")
    if paid.lower() == 'y':
        paid = True
    else:
        paid = False
    date = pd.to_datetime(input("Class Date (YYYY-MM-DD): "))

    entry = pd.DataFrame({
        'Name': [name],
        'Phone': [phone],
        'Address': [address],
        'Paid': [paid],
        'Class Date': [date]
    })

    return entry


# Parameters: 
#   dataFrame - the original Dataframe
#   entry - a Dataframe that represents a new entry
# Purpose: 
#   Takes a new entry and concatenates it with the original Dataframe of previous attendees
def addPrevious(dataFrame, entry):
    return pd.concat([dataFrame, entry])


# Parameters: 
#   dataFrame - the original Dataframe
#   entry - a Dataframe that represents a new entry
# Purpose: 
#   Takes a new entry and concatenates it with the original Dataframe of future attendees
def addFuture(dataFrame, entry):
    return pd.concat([dataFrame, entry])


# General structure of the Dataframes
data = {
    'Name': ['Kevin Khuu'],
    'Phone': [1234567890],
    'Address': ['123 Random Road'],
    'Paid': [True],
    'Class Date': [pd.to_datetime('2024-03-12')]
}

previousAttendees = pd.DataFrame(data)
futureAttendees = pd.DataFrame(data)


