import pandas as pd

# Parameters: None
# Purpose: 
#   Helper function to create an imaginary entry for the dataframe
def createEntry():
    name = input("Name: ")
    phone = int(input("Phone Number: "))
    address = input("Address: ")
    paid = input("Paid(Y/N): ")
    if paid.lower() == 'y':
        paid = True
    else:
        paid = False
    date = pd.to_datetime(input("Class Date (YYYY-MM-DD): "))

    entry = {
        'Name': name,
        'Phone': phone,
        'Address': address,
        'Paid': paid,
        'Class Date': date
    }

    return entry


# Parameters: 
#   entry - an entry to be added
# Purpose: 
#   Takes a new entry and concatenates it with the previousAttendees Dataframe
def addPrevious(entry):
    global previousAttendees
    previousAttendees.loc[len(previousAttendees)] = entry


# Parameters: 
#   entry - an entry to be added
# Purpose: 
#   Takes a new entry and concatenates it with the futureAttendees Dataframe
def addFuture(entry):
    global futureAttendees
    futureAttendees.loc[len(futureAttendees)] = entry


# General structure of the Dataframes
data = {
    'Name': [],
    'Phone': [],
    'Address': [],
    'Paid': [],
    'Class Date': []
}

previousAttendees = pd.DataFrame(data)
futureAttendees = pd.DataFrame(data)


# For testing

